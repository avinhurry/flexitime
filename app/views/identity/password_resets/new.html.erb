<% content_for :title, "Forgot your password?" %>
<div class="card mx-auto max-w-md">
  <p class="card-title">Reset</p>
  <h1 class="section-title">Forgot your password?</h1>
  <p class="muted">We will email you a reset link.</p>

  <%= form_with(url: identity_password_reset_path, class: "mt-6 space-y-4") do |form| %>
    <div>
      <%= form.label :email, class: "label" %>
      <%= form.email_field :email, class: "input", required: true, autofocus: true %>
    </div>

    <div class="flex flex-wrap items-center gap-3">
      <%= form.submit "Send password reset email", class: "btn" %>
      <%= link_to "Back to sign in", sign_in_path, class: "btn-ghost" %>
    </div>
  <% end %>
</div>
