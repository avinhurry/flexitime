<div class="card mx-auto max-w-md">
  <p class="card-title">Reset</p>
  <h1 class="section-title">Reset your password</h1>
  <p class="muted">Choose a new password to sign back in.</p>

  <%= form_with(url: identity_password_reset_path, method: :patch, class: "mt-6 space-y-4") do |form| %>
    <% if @user.errors.any? %>
      <div class="rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-900">
        <p class="font-semibold"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</p>
        <ul class="mt-2 list-disc pl-4">
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.hidden_field :sid, value: params[:sid] %>

    <div>
      <%= form.label :password, "New password", class: "label" %>
      <%= form.password_field :password, class: "input", required: true, autofocus: true, autocomplete: "new-password" %>
      <p class="muted mt-1">12 characters minimum.</p>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirm new password", class: "label" %>
      <%= form.password_field :password_confirmation, class: "input", required: true, autocomplete: "new-password" %>
    </div>

    <div class="flex flex-wrap items-center gap-3">
      <%= form.submit "Save changes", class: "btn" %>
      <%= link_to "Back to sign in", sign_in_path, class: "btn-ghost" %>
    </div>
  <% end %>
</div>
