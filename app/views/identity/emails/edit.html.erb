<div class="card max-w-lg">
  <% if Current.user.verified? %>
    <p class="card-title">Account</p>
    <h1 class="section-title">Change your email</h1>
    <p class="muted">Update the address you use to sign in.</p>
  <% else %>
    <p class="card-title">Verify</p>
    <h1 class="section-title">Verify your email</h1>
    <p class="muted">We sent a verification email. Use the link inside to confirm your address.</p>
    <p class="mt-4">
      <%= button_to "Re-send verification email", identity_email_verification_path, class: "btn-secondary" %>
    </p>
  <% end %>

  <%= form_with(url: identity_email_path, method: :patch, class: "mt-6 space-y-4") do |form| %>
    <% if @user.errors.any? %>
      <div class="rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-900">
        <p class="font-semibold"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</p>
        <ul class="mt-2 list-disc pl-4">
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :email, "New email", class: "label" %>
      <%= form.email_field :email, class: "input", required: true, autofocus: true %>
    </div>

    <div>
      <%= form.label :password_challenge, class: "label" %>
      <%= form.password_field :password_challenge, class: "input", required: true, autocomplete: "current-password" %>
    </div>

    <div class="flex flex-wrap items-center gap-3">
      <%= form.submit "Save changes", class: "btn" %>
      <%= link_to "Back", root_path, class: "btn-ghost" %>
    </div>
  <% end %>
</div>
