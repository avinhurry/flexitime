<div class="card max-w-lg">
  <p class="card-title">Account</p>
  <h1 class="section-title">Your settings</h1>
  <p class="muted">Signed in as <strong><%= Current.user.email %></strong></p>

  <div class="mt-6 space-y-4">
    <div>
      <p class="muted">Login and verification</p>
      <div class="mt-2 flex flex-wrap gap-3">
        <%= link_to "Change password", edit_password_path, class: "btn-secondary" %>
        <%= link_to "Change email", edit_identity_email_path, class: "btn-secondary" %>
      </div>
    </div>

    <div>
      <p class="muted">Access history</p>
      <div class="mt-2">
        <%= link_to "Devices & Sessions", sessions_path, class: "btn-ghost" %>
      </div>
    </div>
  </div>

  <div class="mt-6">
    <%= button_to "Log out", Current.session, method: :delete, class: "btn-secondary" %>
  </div>
</div>
