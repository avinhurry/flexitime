<div class="card">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="section-title">Update time entry</h1>
      <p class="muted">Adjust times or add a lunch break.</p>
    </div>
  </div>

  <%= form_with model: @time_entry, local: true, class: "mt-6 space-y-5" do |form| %>
    <% if @time_entry.errors.any? %>
      <div class="rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-900">
        <p class="font-semibold"><%= pluralize(@time_entry.errors.count, "error") %> prohibited this time entry from being saved:</p>
        <ul class="mt-2 list-disc pl-4">
          <% @time_entry.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="grid gap-5 md:grid-cols-2">
      <div>
        <%= form.label :clock_in, class: "label" %>
        <%= form.datetime_field :clock_in, class: "input", step: 60 %>
      </div>

      <div>
        <%= form.label :clock_out, class: "label" %>
        <%= form.datetime_field :clock_out, class: "input", step: 60 %>
      </div>

      <div>
        <%= form.label :lunch_in, "Lunch in (optional)", class: "label" %>
        <%= form.datetime_field :lunch_in, class: "input", step: 60 %>
      </div>

      <div>
        <%= form.label :lunch_out, "Lunch out (optional)", class: "label" %>
        <%= form.datetime_field :lunch_out, class: "input", step: 60 %>
      </div>
    </div>

    <div class="flex flex-wrap items-center gap-3">
      <%= form.submit "Update entry", class: "btn" %>
      <%= link_to "Back to time entries", time_entries_path, class: "btn-ghost" %>
    </div>
  <% end %>
</div>
