<h1>Edit Time Entry</h1>

<%= form_with model: @time_entry, local: true do |form| %>
  <div>
    <%= form.label :clock_in %>
    <%= form.datetime_select :clock_in %>
  </div>

  <div>
    <%= form.label :clock_out %>
    <%= form.datetime_select :clock_out %>
  </div>

  <div class="field">
    <%= form.label :lunch_duration %>
    <%= form.number_field :lunch_duration, step: 0.1, placeholder: 'Hours' %>
  </div>

  <div>
    <%= form.submit 'Update Time Entry' %>
  </div>
<% end %>

<%= link_to 'Back to Time Entries', time_entries_path %>
