<div class="card mx-auto w-full max-w-lg">
  <p class="card-title">Schedule</p>
  <h1 class="section-title">Edit work schedule</h1>
  <p class="muted">Update your contracted hours and working days.</p>

  <%= form_with(model: @user, url: work_schedule_path, method: :patch, class: "mt-6 space-y-4") do |form| %>
    <% if @user.errors.any? %>
      <div class="rounded-2xl border border-rose-200 bg-rose-50 px-4 py-3 text-sm text-rose-900">
        <p class="font-semibold"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</p>
        <ul class="mt-2 list-disc pl-4">
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :contracted_hours, class: "label" %>
      <%= form.number_field :contracted_hours, class: "input", required: true, min: 1, max: 80 %>
    </div>

    <div>
      <%= form.label :working_days_per_week, "Working days per week", class: "label" %>
      <%= form.number_field :working_days_per_week, class: "input", required: true, min: 1, max: 7 %>
    </div>

    <div class="flex flex-wrap items-center gap-3">
      <%= form.submit "Save changes", class: "btn" %>
      <%= link_to "Back", account_path, class: "btn-ghost" %>
    </div>
  <% end %>
</div>
