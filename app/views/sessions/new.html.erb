<% content_for :title, "Sign in" %>
<div class="card mx-auto max-w-md">
  <p class="card-title">Welcome back</p>
  <h1 class="section-title">Sign in</h1>
  <p class="muted">Use your email and password to continue.</p>

  <%= form_with(url: sign_in_path, class: "mt-6 space-y-4") do |form| %>
    <div>
      <%= form.label :email, class: "label" %>
      <%= form.email_field :email, value: params[:email_hint], class: "input", required: true, autofocus: true, autocomplete: "email" %>
    </div>

    <div>
      <%= form.label :password, class: "label" %>
      <%= form.password_field :password, class: "input", required: true, autocomplete: "current-password" %>
    </div>

    <div class="flex flex-wrap items-center gap-3">
      <%= form.submit "Sign in", class: "btn" %>
      <%= link_to "Forgot your password?", new_identity_password_reset_path, class: "btn-ghost" %>
    </div>
  <% end %>

  <div class="mt-6 text-sm text-slate-600">
    Need access? Contact me for an invite.
  </div>
</div>
